{
  "compilerOptions": {
    "composite": true,
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist/js",
    "jsx": "react",

    /* Linting */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [ "src" ],
  "exclude": [ "node_modules "]
}
